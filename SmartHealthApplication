public class SmartHealthApplication {
  public static void main(String[]args){
    for (int patient =1; patient<=3; patient++){
         double bloodsugar =135.0;
         double BMI= 32.5;

         System.out.println("Checking Patient : "+ patient);

         if(bloodsugar > 126 && BMI> 30){
           System.out.println("The Risk Assessment is High Risk !!");
         }

         else {
           System.out.println("The Risk Assessment is Low Risk !!");
         }
      }
   }
}
